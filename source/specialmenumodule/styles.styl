/* = = = 
Variables... beware! this will become blended with all other modules on the same level
= = = */

burger-height-vw-ratio = 0.2
burger-height = (100vw * burger-height-vw-ratio) 

burger-width-vw-ratio = 0.2
burger-width = (100vw * burger-width-vw-ratio)

bottom-to-burger-vw-ratio = 0.01
bottom-to-burger = (100vw * bottom-to-burger-vw-ratio)

left-to-burger-vw-ratio = 0.01
left-to-burger = (100vw * left-to-burger-vw-ratio)


/* = = = 
Module Specific Styles
= = = */
#specialmenu
    position fixed
    bottom bottom-to-burger
    left left-to-burger
    height: burger-height
    width: burger-width

#specialmenu-frame
    position fixed
    top 0
    left 0
    width 100%
    height 100vh
    backgroundcolor alpha(grey, 0.5)
    
    --fill-color red
    --stroke-color black


#click-catcher.active
    opacity 0.8
    z-index 199
    pointer-events all
#click-catcher
    pointer-events none
    transition: opacity 0.5s
    position fixed
    z-index -1
    opacity 0
    background-color grey
    top 0
    width 100%
    height 100vh