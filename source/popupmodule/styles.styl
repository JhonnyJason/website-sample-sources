/* = = = 
Variables... beware! this will become blended with all other modules on the same level
= = = */
text-color = white
title-text-color = rgba(22, 73, 89, 1)
button-text-color = rgba(0, 167, 206, 1)
frame-background-color = rgba(22, 73, 89, 1)

intro-outro-duration = 0.7s

border-radius-vw-ratio = 0.0333
border-radius-value = (100vw * border-radius-vw-ratio)

title-text-height-vw-ratio = 0.04
title-text-height = (100vw * title-text-height-vw-ratio)

title-text-top-margin-vw-ratio = 0.0266
title-text-top-margin = (100vw * title-text-top-margin-vw-ratio)

title-text-bottom-margin-vw-ratio = 0.001
title-text-bottom-margin = (100vw * title-text-bottom-margin-vw-ratio)


frame-box-shadow-spread = 12px
frame-border-width = 1px

