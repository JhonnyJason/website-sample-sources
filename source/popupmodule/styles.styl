#click-catcher.active
    opacity 0.8
    z-index 300
#click-catcher
    transition: opacity intro-outro-duration
    position fixed
    z-index -1
    opacity 0
    background-color rgb(16, 104, 115)
    top 0
    width 100%
    height 100vh
#popup-frame.active
    opacity: 1
    z-index 301
#popup-frame.active.info
    #popup-button-line
        #popup-cancel-button
            display: none
#popup-frame.active.warning
    #popup-button-line
        #popup-cancel-button
            display: none
#popup-frame
    box-shadow: 0 0 frame-box-shadow-spread
    border-radius: border-radius-value 
    border frame-border-width solid  white
    z-index -1
    opacity 0
    transition opacity intro-outro-duration
    background-color: frame-background-color
    position absolute
    top 50%
    left 50%
    width 90%
    transform: translate(-50%, -50%)
    #popup-close-button
        background-image url("img/close-icon-blue.svg")
        background-size contain
        background-position center
        background-repeat no-repeat
        position absolute
        top 0
        right 0
        height: 30px
        width: 30px
    #popup-title
        color text-color
        font-size: 20px
        font-family "Aurox_CRS" 
        margin 20px 
    #popup-message
        color text-color
        margin 0 20px 0 20px
    #popup-button-line
        display flex
        flex-direction row
        justify-content space-between
        #popup-confirm-button
            padding 20px
            color button-text-color
            font-weight bold
        #popup-cancel-button
            padding 20px
            color button-text-color
            font-weight bold

#popup-frame.warning
    background-color: rgba(200,25, 25, 0.8)

